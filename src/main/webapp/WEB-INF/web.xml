<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>SoccerHub</display-name>
    
    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <!-- Global context params -->
    <context-param>
        <param-name>ADMIN_EXPORT_TOKEN</param-name>
        <param-value>CHANGE_ME_SECURE_TOKEN</param-value>
    </context-param>

    <!-- Servlet Definitions -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Controller.HomeServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>InizioServlet</servlet-name>
        <servlet-class>Controller.InizioServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>RegistrazioneServlet</servlet-name>
        <servlet-class>Controller.RegistrazioneServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AdminUsersExportServlet</servlet-name>
        <servlet-class>Controller.AdminUsersExportServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>Controller.ProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditProfileServlet</servlet-name>
        <servlet-class>Controller.EditProfileServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateMatchServlet</servlet-name>
        <servlet-class>Controller.CreateMatchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateTournamentServlet</servlet-name>
        <servlet-class>Controller.CreateTournamentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>MatchDetailsServlet</servlet-name>
        <servlet-class>Controller.MatchDetailsServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>MatchStatsServlet</servlet-name>
        <servlet-class>Controller.MatchStatsServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>EditMatchServlet</servlet-name>
        <servlet-class>Controller.EditMatchServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TournamentMatchesServlet</servlet-name>
        <servlet-class>Controller.TournamentMatchesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TournamentDetailsServlet</servlet-name>
        <servlet-class>Controller.TournamentDetailsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CreateTournamentMatchServlet</servlet-name>
        <servlet-class>Controller.CreateTournamentMatchServlet</servlet-class>
    </servlet>

    <!-- Search servlets -->
    <servlet>
        <servlet-name>MatchesSearchServlet</servlet-name>
        <servlet-class>Controller.MatchesSearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TournamentSearchServlet</servlet-name>
        <servlet-class>Controller.TournamentSearchServlet</servlet-class>
    </servlet>
    
    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TournamentMatchesServlet</servlet-name>
        <url-pattern>/tournaments/matches</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TournamentMatchesViewServlet</servlet-name>
        <servlet-class>Controller.TournamentMatchesViewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TournamentMatchesViewServlet</servlet-name>
        <url-pattern>/tournaments/matches/view</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TournamentDetailsServlet</servlet-name>
        <url-pattern>/tournaments/details</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateTournamentMatchServlet</servlet-name>
        <url-pattern>/tournaments/matches/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MatchDetailsServlet</servlet-name>
        <url-pattern>/matches/details</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>MatchStatsServlet</servlet-name>
        <url-pattern>/matches/stats</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>EditMatchServlet</servlet-name>
        <url-pattern>/matches/edit</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>InizioServlet</servlet-name>
        <url-pattern>/inizio</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>RegistrazioneServlet</servlet-name>
        <url-pattern>/registrazione</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminUsersExportServlet</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditProfileServlet</servlet-name>
        <url-pattern>/profile/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateMatchServlet</servlet-name>
        <url-pattern>/matches/create</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreateTournamentServlet</servlet-name>
        <url-pattern>/tournaments/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EditTournamentServlet</servlet-name>
        <servlet-class>Controller.EditTournamentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditTournamentServlet</servlet-name>
        <url-pattern>/tournaments/edit</url-pattern>
    </servlet-mapping>

    <!-- Follow/Unfollow matches for Fans -->
    <servlet>
        <servlet-name>FollowMatchServlet</servlet-name>
        <servlet-class>Controller.FollowMatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FollowMatchServlet</servlet-name>
        <url-pattern>/matches/follow</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UnfollowMatchServlet</servlet-name>
        <servlet-class>Controller.UnfollowMatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnfollowMatchServlet</servlet-name>
        <url-pattern>/matches/unfollow</url-pattern>
    </servlet-mapping>

    <!-- Follow/Unfollow tournaments for Fans -->
    <servlet>
        <servlet-name>FollowTournamentServlet</servlet-name>
        <servlet-class>Controller.FollowTournamentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FollowTournamentServlet</servlet-name>
        <url-pattern>/tournaments/follow</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UnfollowTournamentServlet</servlet-name>
        <servlet-class>Controller.UnfollowTournamentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnfollowTournamentServlet</servlet-name>
        <url-pattern>/tournaments/unfollow</url-pattern>
    </servlet-mapping>

    <!-- Search servlet mappings -->
    <servlet-mapping>
        <servlet-name>MatchesSearchServlet</servlet-name>
        <url-pattern>/matches/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TournamentSearchServlet</servlet-name>
        <url-pattern>/tournaments/search</url-pattern>
    </servlet-mapping>
    
    <!-- Listeners -->
    <listener>
        <listener-class>Model.DatabaseInitializer</listener-class>
    </listener>
    
    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error/500.jsp</location>
    </error-page>
</web-app>